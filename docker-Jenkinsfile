pipeline {
    agent any
    parameters{
        string(name:'ECR_REG', defaultValue: '', description: 'ECR Registry')
        string(name:'ECR_CRED', defaultValue: '', description: 'ECR Cred')
    }
    stages {
        stage('Build Docker'){
            steps{
                script{
                    docker.build("crowley-cloud-ecr")
                }
            }
        }
        stage('Push Docker'){
            steps{
                script{
                    withDockerRegistry(url: ECR_REG, credentialsId: ECR_CRED){
                        docker.image("crowley-cloud-ecr").push('latest')
                    }
                }
            }
        }
    }
}