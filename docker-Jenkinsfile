pipeline {
    agent any
    parameters{
        string(name:'ECR_REG', defaultValue: '', description: 'An AWS Elastic IP')
    }
    stages {
        stage('Build Docker'){
            steps{
                script{
                    docker.build("crowley-cloud-ecr")
                }
            }
        }
        stage('Push Docker'){
            steps{
                script{
                    withDockerRegistry("${env.ECR_REG}", 'crowley-cloud-root'){
                        docker.image("crowley-cloud-ecr").push('latest')
                    }
                }
            }
        }
    }
}