pipeline {
    agent any
    parameters{
        string(name:'IMAGE_NAME', defaultValue: '', description: 'ECR Registry')
    }
    stages {
        stage('Build Docker'){
            steps{
                script{
                    image = docker.build("${IMAGE_NAME}")
                }
            }
        }
        stage('Push Docker'){
            steps{
                script{
                    sh "eval `aws ecr get-login --no-include-email`"
                    image.push('latest')
                }
            }
        }
    }
}