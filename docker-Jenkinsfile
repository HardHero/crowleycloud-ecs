pipeline {
    agent any
    parameters{
        string(name:'ECR_REG', defaultValue: '', description: 'An AWS Elastic IP')
    }
    stages {
        stage('Build Docker'){
            steps{
                script{
                    docker.build("crowley-cloud-ecr")
                }
            }
        }
        stage('Push Docker'){
            steps{
                script{
                    withAWS(region:'us-east-1', profile:'default') {
                        def ecrCreds = ecrLogin()
                        print ecrCreds
                    }
                    withDockerRegistry("${env.ECR_REG}"){
                        docker.image("crowley-cloud-ecr").push('latest')
                    }
                }
            }
        }
    }
}